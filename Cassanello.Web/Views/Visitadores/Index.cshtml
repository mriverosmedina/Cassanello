@model IEnumerable<Cassanello.Web.Datos.Entidades.Visitador>

@{
    ViewData["Title"] = "Index";
}

<h2>Visitadores</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Nuevo</a>
</p>
<table class="table table-dark">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Usuario.Document)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Usuario.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Usuario.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Usuario.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Usuario.PhoneNumber)
            </th>
            <th>
                # Médicos
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(model => item.Usuario.Document)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Usuario.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Usuario.LastName)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Usuario.Email)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Usuario.PhoneNumber)
                </td>
                <td>
                    0
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalles</a>
                    <button data-id="@item.Id" class="btn btn-danger btn-sm deleteItem" data-toggle="modal" data-target="#deleteDialog">Eliminar</button>
            </tr>
        }
    </tbody>
</table>

<partial name="_DeleteDialog" />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script type="text/javascript">
        $(document).ready(function () {
            // Delete item
            var item_to_delete;

            $('.deleteItem').click((e) => {
                item_to_delete = e.currentTarget.dataset.id;
            });

            $("#btnYesDelete").click(function () {
                window.location.href = '/Visitadores/Delete/' + item_to_delete;
            });
        });
    </script>
}

